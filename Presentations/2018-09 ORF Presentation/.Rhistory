y<- function(t,k,k_a){
y_0 = 1
D = 30.0
V = 2.0
yhat <- (0.1e1 / (k - k_a) * D / V * k_a * exp(t * (k - k_a)) - 0.1e1 / (k - k_a) * k_a / V * D) * exp(-k * t)
return(yhat)
}
